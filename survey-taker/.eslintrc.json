{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "*.d.ts",
    "tests/setup.ts"
  ]
}
